<Window x:Class="PasswordManager.Desktop.Views.AddEditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PasswordManager.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:AddEditItemViewModel}"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30" MaxWidth="450">
            
            <!-- Header -->
            <TextBlock FontSize="24" 
                     FontWeight="Bold"
                     Margin="0,0,0,30"
                     Text="{Binding Title}"/>

            <!-- Item Type -->
            <TextBlock Text="Type" 
                     FontSize="13" 
                     FontWeight="SemiBold"
                     Foreground="#333"
                     Margin="0,0,0,8"/>
            <ComboBox ItemsSource="{Binding AvailableTypes}"
                    SelectedItem="{Binding SelectedType}"
                    Padding="12,10"
                    FontSize="14"
                    Margin="0,0,0,20"/>

            <!-- Name -->
            <TextBlock Text="Name *" 
                     FontSize="13" 
                     FontWeight="SemiBold"
                     Foreground="#333"
                     Margin="0,0,0,8"/>
            <Border BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                       BorderThickness="0"
                       Padding="12,10"
                       FontSize="14"
                       VerticalContentAlignment="Center"/>
            </Border>

            <!-- LOGIN FORM -->
            <StackPanel Visibility="{Binding IsLoginType, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="Website / URL *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Username / Email" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <!-- Password -->
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                 Text="Password *" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>

                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal"
                                  Margin="0,0,0,8">
                            <Button Command="{Binding GeneratePasswordCommand}"
                                  Content="âš™ï¸ Generate"
                                  Padding="8,4"
                                  FontSize="11"
                                  Margin="0,0,5,0"
                                  Background="#4CAF50"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45a049"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <ToggleButton IsChecked="{Binding ShowPassword}"
                                        Content="ðŸ‘ï¸"
                                        Padding="8,4"
                                        FontSize="11"/>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#DDD" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Margin="0,0,0,10">
                        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                               BorderThickness="0"
                               Padding="12,10"
                               FontSize="14"
                               FontFamily="Consolas"
                               VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowPassword}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- Password Strength -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ProgressBar Grid.Column="0" 
                                   Value="{Binding PasswordStrengthScore}" 
                                   Maximum="100"
                                   Height="4"
                                   Foreground="{Binding PasswordStrengthColor}"
                                   Margin="0,0,10,0"/>
                        
                        <TextBlock Grid.Column="1"
                                 Text="{Binding PasswordStrengthText}" 
                                 FontSize="11"
                                 Foreground="{Binding PasswordStrengthColor}"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Check Breach -->
                    <Button Command="{Binding CheckPasswordBreachCommand}"
                          Content="ðŸ” Check if Password is Breached"
                          Padding="10,8"
                          FontSize="12"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Left"
                          Background="Transparent"
                          BorderBrush="#1976D2"
                          BorderThickness="1"
                          Cursor="Hand"/>

                    <!-- Breach Warning -->
                    <Border Background="#FFEBEE"
                            BorderBrush="#F44336"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,0,0,20"
                            Visibility="{Binding IsPasswordBreached, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold"
                                     Foreground="#D32F2F"
                                     FontSize="12">
                                <Run Text="âš ï¸ Breached Password"/>
                            </TextBlock>
                            <TextBlock Foreground="#D32F2F"
                                     FontSize="11"
                                     TextWrapping="Wrap"
                                     Margin="0,3,0,0">
                                <Run Text="Found in"/>
                                <Run Text="{Binding BreachCount, StringFormat='{}{0:N0}'}"/>
                                <Run Text="data breaches. Use a different password!"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- CREDIT CARD FORM -->
            <StackPanel Visibility="{Binding IsCreditCardType, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="Cardholder Name *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding CardholderName, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Card Number *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"
                           MaxLength="19"/>
                </Border>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Expiry Month" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding ExpiryMonth, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem>01</ComboBoxItem>
                            <ComboBoxItem>02</ComboBoxItem>
                            <ComboBoxItem>03</ComboBoxItem>
                            <ComboBoxItem>04</ComboBoxItem>
                            <ComboBoxItem>05</ComboBoxItem>
                            <ComboBoxItem>06</ComboBoxItem>
                            <ComboBoxItem>07</ComboBoxItem>
                            <ComboBoxItem>08</ComboBoxItem>
                            <ComboBoxItem>09</ComboBoxItem>
                            <ComboBoxItem>10</ComboBoxItem>
                            <ComboBoxItem>11</ComboBoxItem>
                            <ComboBoxItem>12</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Expiry Year" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding ExpiryYear, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem>2024</ComboBoxItem>
                            <ComboBoxItem>2025</ComboBoxItem>
                            <ComboBoxItem>2026</ComboBoxItem>
                            <ComboBoxItem>2027</ComboBoxItem>
                            <ComboBoxItem>2028</ComboBoxItem>
                            <ComboBoxItem>2029</ComboBoxItem>
                            <ComboBoxItem>2030</ComboBoxItem>
                            <ComboBoxItem>2031</ComboBoxItem>
                            <ComboBoxItem>2032</ComboBoxItem>
                            <ComboBoxItem>2033</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="CVV" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CVV, UpdateSourceTrigger=PropertyChanged}"
                               BorderThickness="1"
                               Padding="8,6"
                               FontSize="14"
                               MaxLength="4"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Billing Address" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <TextBox Text="{Binding BillingAddress, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"
                           VerticalScrollBarVisibility="Auto"/>
                </Border>

                <TextBlock Text="ZIP / Postal Code" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- SECURE NOTE FORM -->
            <StackPanel Visibility="{Binding IsSecureNoteType, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="Note Content *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding NoteContent, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="200"
                           VerticalScrollBarVisibility="Auto"/>
                </Border>
            </StackPanel>

            <!-- IDENTITY FORM -->
            <StackPanel Visibility="{Binding IsIdentityType, Converter={StaticResource BoolToVisConverter}}">
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="First Name" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Last Name" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Middle Name" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Date of Birth" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Email" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding IdentityEmail, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Phone" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Address" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"
                           VerticalScrollBarVisibility="Auto"/>
                </Border>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="City" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="State" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Country" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Passport Number" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding PassportNumber, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="License Number" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="#333"
                                 Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding LicenseNumber, UpdateSourceTrigger=PropertyChanged}"
                                   BorderThickness="0"
                                   Padding="12,10"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- BANK ACCOUNT FORM -->
            <StackPanel Visibility="{Binding IsBankAccountType, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="Bank Name *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding BankName, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Account Holder Name" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding AccountHolderName, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Account Number *" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding AccountNumber, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Routing Number" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding RoutingNumber, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="IBAN" 
                         FontSize="13" 
                         FontWeight="SemiBold"
                         Foreground="#333"
                         Margin="0,0,0,8"/>
                <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding IBAN, UpdateSourceTrigger=PropertyChanged}"
                           BorderThickness="0"
                           Padding="12,10"
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Tags -->
            <TextBlock Text="Tags (comma-separated)" 
                     FontSize="13" 
                     FontWeight="SemiBold"
                     Foreground="#333"
                     Margin="0,0,0,8"/>
            <Border BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <TextBox Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
                       BorderThickness="0"
                       Padding="12,10"
                       FontSize="14"
                       VerticalContentAlignment="Center"/>
            </Border>

            <!-- Favorite -->
            <CheckBox IsChecked="{Binding IsFavorite}"
                    Content="â­ Mark as Favorite"
                    FontSize="13"
                    Margin="0,0,0,30"/>

            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                      Command="{Binding SaveCommand}"
                      Style="{StaticResource PrimaryButton}"
                      Content="ðŸ’¾ Save"
                      Margin="0,0,10,0"/>

                <Button Grid.Column="1"
                      Click="CancelButton_Click"
