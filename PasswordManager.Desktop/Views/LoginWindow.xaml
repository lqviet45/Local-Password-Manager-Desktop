<Window x:Class="PasswordManager.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PasswordManager.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1565C0"/>
                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="100" 
                           Height="10"
                           Foreground="#1976D2"/>
                <TextBlock Text="Loading..." 
                         Foreground="White" 
                         FontSize="16"
                         Margin="0,10,0,0"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Background="White" 
                Margin="40"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Opacity="0.2" 
                                BlurRadius="20" 
                                ShadowDepth="5"/>
            </Border.Effect>
            
            <StackPanel Margin="40">
                <!-- Logo/Icon -->
                <Border Width="80" 
                        Height="80" 
                        Background="#1976D2"
                        CornerRadius="40"
                        Margin="0,0,0,20">
                    <TextBlock Text="ðŸ”" 
                             FontSize="40"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="{Binding Title}" 
                         FontSize="24" 
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Your passwords, secure and private" 
                         FontSize="14"
                         Foreground="Gray"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"/>

                <!-- Email -->
                <TextBlock Text="Email" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource ModernTextBox}"
                       Margin="0,0,0,15"/>

                <!-- Master Password -->
                <TextBlock Text="Master Password" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                <PasswordBox x:Name="MasterPasswordBox"
                           Style="{StaticResource ModernPasswordBox}"
                           PasswordChanged="MasterPasswordBox_PasswordChanged"
                           Margin="0,0,0,15"/>

                <!-- Confirm Password (Register only) -->
                <TextBlock Text="Confirm Password" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"
                         Visibility="{Binding IsRegisterMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                           Style="{StaticResource ModernPasswordBox}"
                           PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                           Margin="0,0,0,15"
                           Visibility="{Binding IsRegisterMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Password Strength (Register only) -->
                <StackPanel Visibility="{Binding IsRegisterMode, Converter={StaticResource BoolToVisibilityConverter}}"
                          Margin="0,0,0,15">
                    <TextBlock Text="Password Strength" 
                             FontSize="12" 
                             Foreground="Gray"
                             Margin="0,0,0,5"/>
                    <Grid>
                        <ProgressBar Value="{Binding PasswordStrengthScore}" 
                                   Maximum="100"
                                   Height="8"
                                   Foreground="{Binding PasswordStrengthColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding PasswordStrengthText}" 
                             FontSize="12"
                             Foreground="{Binding PasswordStrengthColor}"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Login"
                      Command="{Binding LoginCommand}"
                      Style="{StaticResource PrimaryButton}"
                      Margin="0,10,0,10"
                      Visibility="{Binding IsRegisterMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                <!-- Register Button -->
                <Button Content="Create Account"
                      Command="{Binding RegisterCommand}"
                      Style="{StaticResource PrimaryButton}"
                      Margin="0,10,0,10"
                      Visibility="{Binding IsRegisterMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Toggle Mode Button -->
                <Button Content="{Binding IsRegisterMode, Converter={StaticResource RegisterModeTextConverter}}"
                      Command="{Binding ToggleModeCommand}"
                      Style="{StaticResource SecondaryButton}"
                      HorizontalAlignment="Center"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                         Foreground="Red"
                         FontSize="12"
                         TextWrapping="Wrap"
                         Margin="0,10,0,0"
                         HorizontalAlignment="Center"
                         Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
